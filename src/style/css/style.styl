@import url('fonts/opensans/font.css') // Open Sans
@import url('fonts/alsrouble/font.css') // ALS Rubl
@import url('fonts/andantinoscript/font.css') // Andantino
@import url('fonts/daxline/font.css') // Daxline Pro
@import url('fonts/daxlinecyr/font.css') // Daxline Cyr
$color = #0490d7

html
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	font-family 'Open Sans'
	line-height 1.414
body
	padding 0
	margin 0
	background #fff
.clearfix:after
	content "."
	display block
	height 0
	visibility hidden
	clear both
.layout
	min-width 320px
	max-width 960px
	margin 0 auto
	padding 20px
	box-sizing border-box
	position relative


/* ------------ UI ------------ */

img
	max-width 100%
	width auto
ul,li
	margin 0
	padding 0
/* ------------ Шапка ------------ */

.header
	background-image url(img/grass.png)
.header-adress
	color #fff
	font-size 0.875rem
	width 34%
	float left
.header-phone
	width 30%
	float right
	color #fff
	&:before
		content ""
		display inline-block
		background url(icons/phone_icon.png)
		background-repeat no-repeat
		background-size contain
		background-position center center
		width 20px
		height 20px
		vertical-align middle
		margin-right 5px
	strong
		font-weight 600
.header-logo
	width 30%
	float left
	text-align center
	position relative
	z-index 10
.subheader
	background #fff
	margin-top -35px
	z-index 1
.subheader-burger
	cursor pointer
	float left
	width 10%
	margin-top -2px
.subheader-logo
	text-align center
	float left
	width 80%
	margin-top -5px
.subheader-mailto
	float right
	width 10%
	text-align right


/* ------------ Фикс-шапка ------------ */

.header-fixed
	background #fff
	box-shadow 0px 0px 15px 5px rgba(0, 0, 0, 0.1)
	position fixed
	display block
	width 100%
	top -90px
	z-index 10
	transition-duration .3s
.header-fixed-burger
	float left
	width 30%
	cursor pointer
.header-fixed-logo
	float left
	width 40%
	text-align center
	margin-top -15px
	margin-bottom -45px
.header-fixed-logo__img
	width 70px
.header-fixed-contact
	float right
	width 30%
	text-align right
.header-fixed-contact__phone
	display inline-block
	vertical-align middle
	margin-right 15px
.header-fixed-contact__mailto
	display inline-block
	vertical-align middle

/* ------------ Меню ------------ */
