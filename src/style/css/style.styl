@import url('fonts/opensans/font.css') // Open Sans
@import url('fonts/alsrouble/font.css') // ALS Rubl
@import url('fonts/andantinoscript/font.css') // Andantino
@import url('fonts/daxline/font.css') // Daxline Pro
@import url('fonts/daxlinecyr/font.css') // Daxline Cyr
$color = #0490d7

html
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	font-family 'Open Sans'
	line-height 1.414
body
	padding 0
	margin 0
.clearfix:after
	content "."
	display block
	height 0
	visibility hidden
	clear both
.layout
	min-width 320px
	max-width 960px
	width 320px
	margin 0 auto
	padding 17px
	box-sizing border-box
	position relative


/* ------------ UI ------------ */

img
	max-width 100%
	width auto

/* ------------ Шапка ------------ */

.header
	background-image url(img/grass.png)
.header-adress
	color #fff
	font-size 0.875rem
	width 34%
	float left
.header-logo
	width 30%
	float left
	text-align center
.subheader
	background #fff
.subheader-burger
	cursor pointer
	float left
	width 10%
	margin-top -2px
.subheader-logo
	text-align center
	float left
	width 80%
	margin-top -5px
.subheader-mailto
	float left
	width 10%

/* ------------ Хоум-скрин ------------ */

.home-screen
	background-image url(img/home-screen.png)
	background-size cover
	background-position center center
	text-align center
	&:after
		content ""
		position absolute
		display block
		width 100%
		height 175px
		z-index 0
		margin-left -17px
		bottom 0
		background $color
		opacity .6
.home-screen__title
	font-size 1.75rem
	margin 0
	color $color
	font-family 'Daxline Cyr'
	text-transform uppercase
	letter-spacing 2px
.home-screen__title
	span
		display block
		letter-spacing 0px
		font-family 'Andantino'
		font-weight normal
		font-size 2.25rem
		text-transform none
		color #000
	&:after
		content ""
		display block
		width 240px
		margin 0 auto
		margin-top 10px
		height 16px
		background-image url(icons/waves.png)
		background-size contain
		background-repeat no-repeat
.home-screen-offer
	width 260px
	height 150px
	margin 0 auto
	margin-top 100px
	padding 30px 10px
	box-sizing border-box
	background-image url(img/home-screen-offer.png)
	background-size contain
	background-repeat no-repeat
	z-index 2
	position relative
.home-screen-offer__title
	font-size 1.5rem
	font-weight bold
	color $color
	font-family 'Daxline Cyr'
	text-transform uppercase
	letter-spacing 2px
	margin-top 5px
	span
		font-size 0.80rem
		margin-top -3px
		font-weight normal
		display block
		text-transform none
		letter-spacing 0px
.home-screen-offer__price
	font-family 'Andantino'
	font-weight normal
	font-size 2.5rem
	margin-top -17px
.home-screen-description
	font-size 0.82rem
	font-weight bold
	color #fff
	font-family 'Daxline Cyr'
	text-transform uppercase
	letter-spacing 2px
	margin-top 15px
	margin-bottom 15px
	z-index 1
	position relative

